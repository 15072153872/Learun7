@{
    ViewBag.Title = "系统表单例子-请假单";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">开始日期<font face="宋体">*</font></div>
        <input id="F_Begin" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker()" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">结束日期</div>
        <input id="F_End" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker()" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">请假天数<font face="宋体">*</font></div>
        <input id="F_Num" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">请假理由</div>
        <textarea id="F_Reason" class="form-control" style="height:110px;"></textarea>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_WorkFlowModule/Views/WfSystemDemo/DemoLeaveForm.js")
