@{
    ViewBag.Title = "会员信息";
    Layout = "~/Views/Shared/_GirdForm.cshtml";
}
<style>
    .jfgrid-data-cell {
        border-bottom: 1px solid #ddd;
        border-right: 1px solid #ddd;
    }
</style>
<div class="lr-form-wrap" id="form">
    <div class="col-xs-6 lr-form-item"  data-table="LR_Demo_User" >
