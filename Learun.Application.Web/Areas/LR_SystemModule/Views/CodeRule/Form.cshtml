
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
@Html.AppendCssFile("/Areas/LR_SystemModule/Views/CodeRule/Form.css")
<div class="lr-form-layout">
    <div class="lr-form-layout-header" id="form1">
        <div class="col-xs-6 lr-form-item">
            <div class="lr-form-item-title">单据编号<font face="宋体">*</font></div>
            <input id="F_EnCode" type="text" class="form-control lr-input-underline" placeholder="请输入编号" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-6 lr-form-item">
            <div class="lr-form-item-title">单据名称<font face="宋体">*</font></div>
            <input id="F_FullName" type="text" class="form-control lr-input-underline" placeholder="请输入名称" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-12 lr-form-item">
            <div class="lr-form-item-title">单据说明</div>
            <input id="F_Description" type="text" class="form-control lr-input-underline" placeholder="添加说明" />
        </div>
    </div>
    <div class="lr-form-layout-body">
        <div class="lr-form-layout-body-title">
            <div class="lr-form-jfgrid-btns">
                <a id="lr_add_format" class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;添加</a>
                <a id="lr_edit_format" class="btn btn-info"><i class="fa fa-pencil-square-o"></i>&nbsp;修改</a>
                <a id="lr_delete_format" class="btn btn-danger"><i class="fa fa-trash-o"></i>&nbsp;移除</a>
            </div>
            <span>规则设计</span>
        </div>
        <div id="gridtable"></div>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_SystemModule/Views/CodeRule/Form.js")
