            </label>
            <label>
                <input name="verifyType" id="verifyType2" type="radio" value="2" />
                不同意
            </label>
        </div>
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">备注</div>
        <textarea id="description" class="form-control" style="height: 200px;"></textarea>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_WorkFlowModule/Views/WfMyTask/AuditFlowForm.js")


