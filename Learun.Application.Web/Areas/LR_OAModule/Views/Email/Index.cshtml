@{
    ViewBag.Title = "邮件管理";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div id="lr_layout" class="lr-layout lr-layout-left-center">
    <div class="lr-layout-left">
        <div class="lr-layout-wrap lr-layout-wrap-notitle" style="padding-top:10px;">
            <div class="lr-layout-body">
                <ul class="lr-left-list" id="lr_left_list">
                    <li class="lrlt" data-value="1">写邮件</li>
                    <li data-value="2" class="active lrlt">收件箱</li>
                    <li data-value="3" class="lrlt">邮箱配置</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="lr-layout-center">
        <div class="lr-layout-wrap lr-layout-wrap-notitle">
            <div class="lr-layout-tool">
                <div class="lr-layout-tool-left">
                    <div class="lr-layout-tool-item">
                        <div id="datesearch" class="datetime"></div>
                    </div>
                    <div class="lr-layout-tool-item">
                        <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" />
                    </div>
                    <div class="lr-layout-tool-item">
                        <a id="btn_Search" class="btn btn-primary btn-sm"><i class="fa fa-search"></i>&nbsp;<span class="lrlt">查询</span></a>
                    </div>
                </div>
                <div class="lr-layout-tool-right">
                    <div class=" btn-group btn-group-sm">
                        <a id="lr_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class=" btn-group btn-group-sm" learun-authorize="yes">
                        <a id="lr_getemail" class="btn btn-default"><i class="fa fa-eraser"></i>&nbsp;<span class="lrlt">收邮件</span></a>
                        <a id="lr_sendemail" class="btn btn-default"><i class="fa fa-eraser"></i>&nbsp;<span class="lrlt">写邮件</span></a>
                        <a id="lr_detail" class="btn btn-default"><i class="fa fa-eraser"></i>&nbsp;<span class="lrlt">查看</span></a>
                        <a id="lr_delete" class="btn btn-default"><i class="fa fa-eraser"></i>&nbsp;<span class="lrlt">删除</span></a>
                    </div>
                </div>
            </div>
            <div class="lr-layout-body" id="sendtable">
            </div>
            <div class="lr-layout-body" id="receivetable">
            </div>
            <div class="lr-layout-body" id="gridtable" style="display:none">
            </div>
        </div>
    </div>
</div>

@Html.AppendJsFile("/Areas/LR_OAModule/Views/Email/Index.js")

