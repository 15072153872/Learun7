    ViewBag.Title = "数据权限添加条件";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<style>
    .lr-field {
        display:none;
    }
</style>

<div class="lr-form-wrap" id="form">
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">选择字段<font face="宋体">*</font></div>
        <div id="F_FieldId" isvalid="yes" checkexpession="NotNull"></div>
    </div>
