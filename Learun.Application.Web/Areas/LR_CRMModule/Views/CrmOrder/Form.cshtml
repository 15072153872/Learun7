
@{
    ViewBag.Title = "新增订单";
    Layout = "~/Views/Shared/_Form.cshtml";
}
@Html.AppendCssFile("/Areas/LR_CRMModule/Views/CrmOrder/Form.css")
<div class="lr-layout">
    <div class="lr-layout-wrap lr-form-wrap" style="padding-top:30px;">
        <div class="col-xs-3 lr-form-item">
            <div class="lr-form-item-title">客户名称<font face="宋体">*</font></div>
            <div id="F_CustomerId" isvalid="yes" checkexpession="NotNull"></div>
        </div>
        <div class="col-xs-3 lr-form-item">
            <div class="lr-form-item-title">销售人员<font face="宋体">*</font></div>
            <div id="F_SellerId" isvalid="yes" checkexpession="NotNull"></div>
        </div>
        <div class="col-xs-3 lr-form-item">
            <div class="lr-form-item-title">单据日期<font face="宋体">*</font></div>
            <input id="F_OrderDate" type="text" class="form-control lr-input-wdatepicker" value="@Learun.Util.Time.GetToday()" onfocus="WdatePicker()" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-3 lr-form-item">
            <div class="lr-form-item-title">单据编号<font face="宋体">*</font></div>
            <input id="F_OrderCode" type="text" class="form-control" readonly value="@ViewBag.OrderCode" isvalid="yes" checkexpession="NotNull" />
        </div>

        <div class="col-xs-12 lr-form-item lr-form-item-grid">
            <div id="productgird"></div>
        </div>

        <div class="col-xs-12 lr-form-item" style="padding-left:40px;">
            <textarea id="F_Description" data-wfname="备注信息" placeholder="暂无备注信息" class="form-control" style="height: 80px;"></textarea>
        </div>

        <div class="col-xs-3 lr-form-item">
            <div class="lr-form-item-title">优惠金额<font face="宋体">*</font></div>
            <input id="F_DiscountSum" type="text" class="form-control" value="0.00" isvalid="yes" checkexpession="Double" />
        </div>
        <div class="col-xs-3 lr-form-item">
            <div class="lr-form-item-title">收款金额<font face="宋体">*</font></div>
            <input id="F_Accounts" type="text" class="form-control" value="0.00" isvalid="yes" checkexpession="Double" />
        </div>
        <div class="col-xs-3 lr-form-item">
            <div class="lr-form-item-title">收款日期<font face="宋体">*</font></div>
            <input id="F_PaymentDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ onpicked: function () { $('#F_PaymentDate').trigger('change'); } })" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-3 lr-form-item">
            <div class="lr-form-item-title">收款方式<font face="宋体">*</font></div>
            <div id="F_PaymentMode" isvalid="yes" checkexpession="NotNull"></div>
        </div>

        <div class="col-xs-6 lr-form-item">
            <div class="lr-form-item-title">销售费用<font face="宋体">*</font></div>
            <input id="F_SaleCost" type="text" class="form-control" value="0.00" isvalid="yes" checkexpession="Double" />
        </div>
        <div class="col-xs-6 lr-form-item">
            <div class="lr-form-item-title">制单人员<font face="宋体">*</font></div>
            <input id="F_CreateUserName" type="text" class="form-control" value="@Learun.Util.LoginUserInfo.Get().realName" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-6 lr-form-item">
            <div class="lr-form-item-title">合同编号</div>
            <input id="F_ContractCode" type="text" class="form-control" />
        </div>
        <div class="col-xs-6 lr-form-item">
            <div class="lr-form-item-title">合同附件</div>
            <div id="F_ContractFile"></div>
        </div>
        <div class="col-xs-12 lr-form-item">
            <div class="lr-form-item-title">摘要信息</div>
            <textarea id="F_AbstractInfo" type="text" class="form-control" style="height:40px;"></textarea>
        </div>
    </div>

    <div class="top-btn-tool">
        <a id="savaAndAdd" class="btn btn-success">保存并新增</a>
        <a id="save" class="btn btn-default">保存单据</a>
    </div>
</div>

@Html.AppendJsFile("/Areas/LR_CRMModule/Views/CrmOrder/Form.js")

