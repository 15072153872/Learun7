@{
    ViewBag.Title = "审核流程";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">审核结果<font face="宋体">*</font></div>
        <div class="radio">
            <label>
                <input name="verifyType" id="verifyType1" type="radio" value="1" />
