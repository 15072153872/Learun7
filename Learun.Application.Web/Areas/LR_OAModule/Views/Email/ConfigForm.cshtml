@{
    ViewBag.Title = "邮件配置";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap" id="form">
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">POP3服务<font face="宋体">*</font></div>
        <input id="F_POP3Host" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">POP3端口<font face="宋体">*</font></div>
        <input id="F_POP3Port" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">SMTP服务<font face="宋体">*</font></div>
        <input id="F_SMTPHost" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">SMTP端口<font face="宋体">*</font></div>
        <input id="F_SMTPPort" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">邮箱名称<font face="宋体">*</font></div>
        <input id="F_SenderName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">邮箱账户</div>
        <input id="F_Account" type="text" class="form-control" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">邮箱密码<font face="宋体">*</font></div>
        <input id="F_Password" type="password" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">SSL登录</div>
        <input id="F_Ssl" type="checkbox" />
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_OAModule/Views/Email/ConfigForm.js")
