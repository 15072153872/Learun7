@{
    ViewBag.Title = "发布新闻";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<div class="lr-form-wrap" id="form">
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">新闻标题<font face="宋体">*</font></div>
        <input id="F_FullHead" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" placeholder="请输入标题" />
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">新闻栏目<font face="宋体">*</font></div>
        <div id="F_CategoryId" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">发布时间<font face="宋体">*</font></div>
        <input id="F_ReleaseTime" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt: 'yyyy/MM/dd HH:mm' })" isvalid="yes" checkexpession="NotNull" value="@Learun.Util.Time.GetToday("yyyy/MM/dd HH:mm")" />
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">作者<font face="宋体">*</font></div>
        <input id="F_AuthorName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" placeholder="请输入作者" />
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">编辑<font face="宋体">*</font></div>
        <input id="F_CompileName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" placeholder="请输入编辑人员" />
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">Tag标签</div>
        <input id="F_TagWord" type="text" class="form-control" placeholder="多个标签之间用“,”分隔，最多不超过10个" />
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">关键字</div>
        <input id="F_Keyword" type="text" class="form-control" placeholder="多个关键字之间用“,”分隔，最多不超过10个" />
    </div>
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">内容</div>
        <script id="editor" type="text/plain" style="height:270px;">
        </script>
    </div>
</div>

<script src="~/Content/ueditor/ueditor.config.js"></script>
<script src="~/Content/ueditor/ueditor.all.js"></script>
<script src="~/Content/ueditor/lang/zh-cn/zh-cn.js"></script>
@Html.AppendJsFile("/Areas/LR_OAModule/Views/News/Form.js")
